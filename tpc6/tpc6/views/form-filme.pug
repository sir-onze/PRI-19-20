extends layout

block content
  .w3-container
    h1 Inserção de um Filme
    form.w3-container(action="/filmes/inserir" method="post")
        label Titulo:
        input.w3-input(type="text" name="title")
        label Ano:
        input.w3-input(type="text" name="year")
        label Elenco:
        input.w3-input(type="text" name="cast")
        label Género:
        input.w3-input(type="text" name="genrer")
        input.w3-input(type="submit" value="Enviar")

