extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Adicionar nota 
            .w3-container
                form.w3-container(action='/alunos/'+ aluno.id + '/notas' method='POST')
                    label
                        b Indicador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='indicador')
                    label 
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nota')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
        .w3-card-4
        .w3-card-4
            header.w3-container.w3-teal
                h3 Informações de Alunos
            table.w3-table-all
                tr
                    th Nome
                    th Curso
                    th Ações
                if aluno.notas
                    each i in aluno.notas
                        tr
                            td= i.indicador
                            td= i.nota
                            td 
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagaNota('" + aluno.id + "','" + aluno.id + "')") Apagar
                        
        .w3-card-4
        td 
                            a(href="/alunos/")
                                button.w3-margin-right.w3-button.w3-circle.w3-blue-grey Voltar
        footer.w3-container.w3-teal
            address Gerado por Tiago 
                

